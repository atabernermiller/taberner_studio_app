# AWS Configuration
APP_ENV=aws
AWS_REGION=us-east-1

# DynamoDB Configuration
CATALOG_TABLE_NAME=taberner-studio-catalog

# S3 Bucket Configuration
CATALOG_BUCKET_NAME=taberner-studio-catalog-images-us-east-1
APPROVED_BUCKET=taberner-studio-images-us-east-1
QUARANTINE_BUCKET=taberner-studio-quarantine-us-east-1

# Recommendation Configuration
MAX_RECOMMENDATIONS=8
MIN_RECOMMENDATIONS=4

# AWS Credentials (if not using AWS CLI profile)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Optional: IAM Role ARN (if using EC2/ECS)
# IAM_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT:role/TabernerStudioAppRole
